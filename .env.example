# =========================================================
# Runtime defaults NOT stored in Vault (safe for git)
# =========================================================

# Global runtime
NODE_ENV=development
HOST=0.0.0.0
LOG_LEVEL=info

# Vault connectivity so services can fetch secrets
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SKIP_VERIFY=true

# API Gateway + downstream URLs
GATEWAY_PORT=3000
USER_SERVICE_URL=http://localhost:3001
GAME_SERVICE_URL=http://localhost:3002
CHAT_SERVICE_URL=http://localhost:3003
TOURNAMENT_SERVICE_URL=http://localhost:3004
CORS_ORIGIN=http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# Frontend redirects handled inside the user service
OAUTH_42_SUCCESS_REDIRECT=http://localhost:5173/oauth/callback
OAUTH_42_FAILURE_REDIRECT=http://localhost:5173/oauth/error
USER_SERVICE_SUCCESS_REDIRECT=http://localhost:5173/oauth/callback
USER_SERVICE_FAILURE_REDIRECT=http://localhost:5173/oauth/error

# Messaging / cache infrastructure (not in Vault)
RABBITMQ_URL=amqp://transcendence:transcendence_dev@localhost:5672
RABBITMQ_EXCHANGE=transcendence.events
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# User service runtime
USER_SERVICE_PORT=3001
USER_SERVICE_HOST=0.0.0.0
DB_PATH=./services/user-service/data/user-service.db
REFRESH_TOKEN_TTL_DAYS=7
SKIP_INTERNAL_API_CHECK=false

# Game service runtime
GAME_SERVICE_PORT=3002
GAME_SERVICE_DB_PATH=./services/game-service/var/game-service.db

# Chat service runtime
CHAT_SERVICE_PORT=3003

# Tournament service runtime
TOURNAMENT_SERVICE_PORT=3004
TOURNAMENT_DB_PATH=./services/tournament-service/tournament-service.db
NOTIFICATION_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
