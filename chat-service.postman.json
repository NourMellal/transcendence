{
  "info": {
    "name": "Chat Service API Tests",
    "description": "Collection for testing chat-service endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "userServiceUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "chatServiceUrl",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{userServiceUrl}}/auth/signup",
              "host": ["{{userServiceUrl}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "2. Login (Get Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    const token = response.accessToken || response.access_token || response.token;",
                  "    pm.collectionVariables.set('accessToken', token);",
                  "    console.log('Token saved:', token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{userServiceUrl}}/auth/login",
              "host": ["{{userServiceUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat Service",
      "item": [
        {
          "name": "Get Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{chatServiceUrl}}/conversations",
              "host": ["{{chatServiceUrl}}"],
              "path": ["conversations"]
            }
          }
        },
        {
          "name": "Send Direct Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello! This is a test message\",\n  \"type\": \"DIRECT\",\n  \"recipientId\": \"recipient-user-id-here\"\n}"
            },
            "url": {
              "raw": "{{chatServiceUrl}}/messages",
              "host": ["{{chatServiceUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "Send Game Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Good game!\",\n  \"type\": \"GAME\",\n  \"gameId\": \"game-123\"\n}"
            },
            "url": {
              "raw": "{{chatServiceUrl}}/messages",
              "host": ["{{chatServiceUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "Get Messages (Direct)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{chatServiceUrl}}/messages?type=DIRECT&recipientId=recipient-user-id-here&limit=50",
              "host": ["{{chatServiceUrl}}"],
              "path": ["messages"],
              "query": [
                {
                  "key": "type",
                  "value": "DIRECT"
                },
                {
                  "key": "recipientId",
                  "value": "recipient-user-id-here"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Messages (Game)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{chatServiceUrl}}/messages?type=GAME&gameId=game-123&limit=50",
              "host": ["{{chatServiceUrl}}"],
              "path": ["messages"],
              "query": [
                {
                  "key": "type",
                  "value": "GAME"
                },
                {
                  "key": "gameId",
                  "value": "game-123"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
