{
  "name": "@transcendence/root",
  "version": "1.0.0",
  "description": "Transcendence - Microservices Architecture for Real-time Pong Game",
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5",
    "@types/node": "^20.19.24",
    "pnpm": "^10.26.2",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "predev:all": "./scripts/setup-service.sh",
    "dev:user": "pnpm --filter @transcendence/user-service dev",
    "dev:game": "pnpm --filter @transcendence/game-service dev",
    "dev:chat": "pnpm --filter @transcendence/chat-service dev",
    "dev:tournament": "pnpm --filter @transcendence/tournament-service dev",
    "dev:web": "pnpm --filter @transcendence/web dev",
    "dev:gateway": "pnpm --filter @transcendence/api-gateway dev",
    "dev:all": "pnpm --parallel dev",
    "bots:tournament": "ts-node tools/tournament-bots.ts",
    "bots:game": "ts-node tools/game-bot.ts",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "vault:start": "docker compose up -d vault redis",
    "vault:setup": "bash infrastructure/vault/simple-setup.sh",
    "api:validate": "redocly lint docs/api/openapi.yaml",
    "api:preview": "redocly preview-docs docs/api/openapi.yaml",
    "api:build": "redocly build-docs docs/api/openapi.yaml -o docs/api/generated"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NourMellal/transcendence.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NourMellal/transcendence/issues"
  },
  "homepage": "https://github.com/NourMellal/transcendence#readme",
  "packageManager": "pnpm@9.1.0+sha512.67f5879916a9293e5cf059c23853d571beaf4f753c707f40cb22bed5fb1578c6aad3b6c4107ccb3ba0b35be003eb621a16471ac836c87beb53f9d54bb4612724"
}
