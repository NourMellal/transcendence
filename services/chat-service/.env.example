# ---------------------------------------
# Chat Service runtime (non-secret, non-Vault)
# ---------------------------------------
CHAT_SERVICE_PORT=3003
CHAT_SERVICE_DB_PATH=./data/chat-service.db

# Downstream services used for validation
USER_SERVICE_URL=http://localhost:3001
GAME_SERVICE_URL=http://localhost:3002

# Gateway hints (frontend)
GATEWAY_WS_CHAT_PATH=/api/chat/ws
GATEWAY_HTTP_URL=http://localhost:3000

# Vault access for local runs (secrets live in Vault)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SKIP_VERIFY=true

# Note: INTERNAL_API_KEY and JWT secrets are sourced from Vault. Do not hardcode them here.
