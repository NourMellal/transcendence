{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@transcendence/shared-types": ["../../packages/shared-types/src"],
      "@transcendence/shared-utils": ["../../packages/shared-utils/src"],
      "@transcendence/shared-validation": ["../../packages/shared-validation/src"],
      "@transcendence/shared-messaging": ["../../packages/shared-messaging/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/shared-types" },
    { "path": "../../packages/shared-utils" },
    { "path": "../../packages/shared-validation" },
    { "path": "../../packages/shared-messaging" }
  ]
}
